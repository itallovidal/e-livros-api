generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuarios {
  email      String     @id @unique
  name       String
  password   String
  created_at DateTime   @default(now())
  alugados   alugados?
  favoritos  favoritos?
  lidos      lidos?

  @@map("usuarios")
}

model alugados {
  id             String   @id @default(uuid())
  user_id        String   @unique
  user           usuarios @relation(fields: [user_id], references: [email])
  book_id        String
  data_devolucao DateTime
  data_aluguel   DateTime
  created_at     DateTime @default(now())

  @@map("alugados")
}

model favoritos {
  id         String   @id @default(uuid())
  user_id    String   @unique
  user       usuarios @relation(fields: [user_id], references: [email])
  book_id    String
  created_at DateTime @default(now())

  @@map("favoritos")
}

model lidos {
  id         String   @id @default(uuid())
  user_id    String   @unique
  user       usuarios @relation(fields: [user_id], references: [email])
  book_id    String
  created_at DateTime @default(now())

  @@map("lidos")
}
